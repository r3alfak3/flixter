<br />
<div class="booch-box col-10 offset-1 p-4 my-5 off-white-b bs">
	<h1 class="text-center fer-blk brownish-f tsa"><%= @course.title %> <span class="badge badge-default off-white-f green-b"><%= number_to_currency @course.cost %></span></h1>
 		<%= image_tag @course.image.url, class: 'img-fluid' %>
		<% if current_user && current_user == @course.user %>
		<%= link_to instructor_course_path(@course), class: 'btn btn-primary brownish-b btn-large droid' do %>
			<i class="fas fa-cog"></i>
			Settings
		<% end %>
		<% end %>
	<div class="container">
		<div class="row">
			<div class="col-md-10 col-12">
				<p class="droid"><%= @course.description %></p>
			</div>
		</div>
			<% @course.sections.each do |section| %>
			<div class="col-md-8 offset-md-2 col-12 offset-0 ">
				<div class="row">
				  <div class="col-sm-4"><h4 class="brownish-f tsa"><%= section.title %></h4></div>
				</div>
				  <% section.lessons.each do |lesson| %>
				  <div class="row">
				  <div class="col-sm-4">
				  	<%= link_to lesson_path(lesson) do %>
						<p><b><%= lesson.title %></b></p>
						<% end %>
						</div>
				  <div class="col-sm-8">
				  	<p><%= lesson.subtitle %></p>
				  </div>
				</div>
				  <% end %>
				</div>
				<% end %>
		</div>
	</div>
</div>
