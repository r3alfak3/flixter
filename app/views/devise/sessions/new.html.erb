<div class="col-lg-6 offset-lg-3 col-12 offset-0">
  <h2 class="brownish-f">Log in</h2>
  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs droid brownish-f">
      <%= f.input :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "LOG IN", class: 'fer off-white-f brownish-b' %>
  <% end %>
      <p class="float-right"><%= render "devise/shared/links" %></p>
    </div>
</div>