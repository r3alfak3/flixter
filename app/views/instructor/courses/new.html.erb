<div class="booch-box col-10 offset-1 p-4 my-5 off-white-b droid brownish-f bs">
	<h1 class="fer-blk brownish-f">Add a new course</h1>
	<div class="col-9 offset-2">
		<%= simple_form_for @course, url: instructor_courses_path do |f| %>
			<%= f.input :title %>
			<%= f.input :description %>
			<%= f.input :cost %>
			<br />
			<%= f.submit "Create", class: 'btn btn-primary' %>
			<br />
		<% end %>
	</div>
</div>