<br />
<div class="booch-box col-10 offset-1 p-4 my-5 off-white-b bs">
	<h1 class="text-center fer-blk brownish-f tsa"><%= @course.title %> <span class="badge badge-default off-white-f green-b"><%= number_to_currency @course.cost %></span></h1>
	<div class="container">
	  <div class="row">
	    <div class="col text-center mt-3 mb-4">
				<% if current_user && current_user == @course.user %>
					<%= link_to instructor_course_path(@course), class: 'btn btn-primary brownish-b btn-large droid' do %>
						<i class="fas fa-cog"></i>
						Settings
					<% end %>
					<%= link_to new_instructor_course_section_path(@course), class: 'btn btn-primary brownish-b btn-large off-white-f droid' do %>
						<i class="fas fa-plus-circle"></i>
						Section
					<% end %>
					<%= link_to course_path(@course), class: 'btn btn-primary btn-large brownish-b off-white-f droid' do %>
						<i class="fas fa-glasses"></i>
						Preview
					<% end %>
				<% end %>
	    </div>
	  </div>
	</div>
	<div class="row">
		<div class="col-md-10 col-12">
			<p class="droid"><%= @course.description %></p>
		</div>
		<% @course.sections.each do |section| %>
		<div class="col-md-8 offset-md-2 col-12 offset-0 ">
			<dl class="row">
				  <dt class="col-sm-4"><h4 class="brownish-f tsa">LESSONS:</h4></dt>
			  <dd class="col-sm-8">
			  	<%= link_to new_instructor_section_lesson_path(section), class: 'btn btn-primary brownish-b btn-sm off-white-f droid' do %>
						<i class="fas fa-plus-circle"></i>
						Lesson
					<% end %>
				</dd>
			  <% section.lessons.each do |lesson| %>
			  <dt class="col-sm-4"><p><b><%= lesson.title %></b></p></dt>
			  <dd class="col-sm-8"><p><%= lesson.subtitle %></p></dd>
			  <% end %>
			</dl>
			<% end %>
		</div>
	</div>
</div>