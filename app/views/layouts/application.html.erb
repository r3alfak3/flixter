<!DOCTYPE html>
<html>
  <head>
    <title>Flixter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>
<body>
  <div id="flex-content-container">
    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
      <% end %>
      <% if alert.present? %>
      <p class="alert alert-danger red"><%= alert %></p>
    <% end %>
    <br class="clear">
  <div class="col-9 col-md-6 offset-md-3 offset-2 logo text-center navbar-brand">
    <%= link_to image_tag('scamcorder_logo.svg', class: 'maxi'), root_path %>
  </div>
  <nav class="navbar navbar-expand-lg navbar-inverse bg-inverse sticky-top droid-b green-b bs">
    <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbar" aria-controls="navbar" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse justify-content-between" id="navbar">
      <ul class="navbar-nav mr-auto mt-2 mt-md-0">
        <li class="nav-item">
          <%= link_to courses_path, class: 'nav-link off-white-f droid-b' do %>
          <i class="fas fa-book-open"></i>
          Browse
          <% end %>
        </li>
      </ul>
      <ul class="navbar-nav">
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to dashboard_path, class: 'nav-link off-white-f droid-b' do %>
              <i class="fas fa-user-ninja"></i>
              Dashboard
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to destroy_user_session_path, method: :delete, class: 'nav-link off-white-f droid-b' do %>
              <i class="fas fa-sign-out-alt"></i>
              Sign Out
            <% end %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to new_user_session_path, class: 'nav-link off-white-f droid-b' do %>
             <i class="fas fa-sad-cry"></i>
             Sign In
            <% end %>
          </li>
          <li class="nav-item">
            <%= link_to new_user_registration_path, class: 'nav-link off-white-f droid-b' do %>
             <i class="fas fa-cash-register"></i>
             Register
            <% end %>
          </li>
        <% end %>
      </ul>   
    </div>
  </nav>
    <%= yield %>
  </div>
  <footer class="col-12 off-white-b">
    <div class="container-fluid text-center text-md-left">
      <div class="row pt-4 px-3">
        <div class="col-lg-8 col-12 offset-lg-2 offset-0">
          <h1 class="text-center brownish-f tsa">Everything Else</h1>
            <div class="col-10 offset-1 col-md-5 offset-md-1">
              <b>Teachers</b>
              <br />
              <%= link_to 'Teach a Course', new_instructor_course_path %>          </div>
            <div class="col-10 offset-1 col-md-5 offset-md-1">
              <p class="pt-2 brownish-f">Say something.</p>
            </div>
        </div>
      </div>
    </div>
    <div class="col-12 text-center pb-3 brownish-f">
      <p class="copyright brownish-f droid-b">Â© 2019 | 
      <%= link_to image_tag('stefan_isaia.png', size:'125x38'), 'http://www.stefanisaia.com', target:'_blank' %>
    </div>
  </footer>
  <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
  <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>   
  </body>
</html>